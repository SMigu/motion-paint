<Window x:Class="motion_paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi"></k:KinectSensorChooserUI>
        <k:KinectUserViewer VerticalAlignment="Top" HorizontalAlignment="Center" Name="kinectUserViewer" k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" UserColoringMode="Manual" />
        <k:KinectRegion Name="kinectRegion">
            <Grid>
                <InkCanvas Name="inkCanvas">

                </InkCanvas>
                <k:KinectTileButton Height="160" Margin="0,0,0,748.5" Width="225" Background="White" Foreground="#FFBCB2CE" Click="increaseSizeOnClick" HorizontalAlignment="Left" VerticalAlignment="Bottom" BorderBrush="Black" BorderThickness="5" FontSize="100" Content="+" RenderTransformOrigin="0.644,0.738"/>
                <k:KinectTileButton Height="160" Margin="0,0,0,583.5" Width="225" Background="White" Foreground="#FFBCB2CE" Click="decreaseSizeOnClick" HorizontalAlignment="Left" VerticalAlignment="Bottom" BorderBrush="Black" BorderThickness="5" FontSize="100" Content="-"/>

                <k:KinectTileButton Height="160" Margin="0,0,10,557.5" Width="225" Background="Blue" Foreground="#FFBCB2CE" Click="blueOnClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="BLUE"/>
                <k:KinectTileButton Height="160" Margin="0,0,11,882.5" Width="225" Background="Red" Foreground="#FFBCB2CE" Click="redOnClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="RED"/>
                <k:KinectTileButton Height="160" Margin="0,0,12,717.5" Width="224" Background="Green" Foreground="#FFBCB2CE" Click="greenOnClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="GREEN"/>
                <k:KinectTileButton Height="160" Margin="0,0,12,392.5" Width="225" Background="Black" Foreground="#FFBCB2CE" Click="blackOnClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="BLACK"/>
                <k:KinectTileButton Height="160" Margin="0,0,0,0.5" Width="224" Background="White" Foreground="Black" Click="clearOnClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderBrush="Black" BorderThickness="5">CLEAR</k:KinectTileButton>
            </Grid>
        </k:KinectRegion>
    </Grid>
</Window>
